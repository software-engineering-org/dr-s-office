<div class="wrapper">
    <div class="header header-filter"
         style="background-image:  url('/images/background.jpg');">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="title">SIGN UP</h1>
                    <h4>You can sign up here to have an appointment</h4>
                    <br/>
                </div>
            </div>
        </div>
    </div>

    <div class="main main-raised">

        <form class="form" method="post" action="/signup" enctype="multipart/form-data">
            <div class="section" id="javascriptComponents">
                <div class="container">
                    <div class="title">
                        <h2>Sign Up form</h2>
                    </div>

                    <br> <br>
                    <form method="post" action="/signup"  encType="multipart/form-data">
                        <div class="row" id="modals">

                            <div class="col-sm-6  col-md-offset-1">

                                <div class="row">
                                    <div class="col-md-7 col-md-offset-1">
                                        <div class="title">
                                            <h4>Personal info</h4>
                                        </div>

                                    </div>
                                </div>

                                <div class="col-md-9">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Name</label>

                                        <input name="Name" type="text" class="form-control"  maxlength="100" required>

                                    </div>
                                </div>


                                <div class="col-sm-9">
                                    <div class="form-group label-floating">
                                        <label class="control-label">City</label>

                                        <input name="City" type="text" class="form-control" maxlength="50" required>

                                    </div>
                                </div>

                                <div class="col-sm-9">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Zip Code</label>

                                        <input  name="Zip" type="text" class="form-control"  pattern = "[0-9]{5,6}" required>


                                    </div>
                                </div>


                                <div class="col-sm-9">
                                    <div class="form-group label-static">
                                        <label class="control-label">Birth Date</label>
                                        <input name="Birth Date" title="Birth Date" class="datepicker form-control"
                                               type="text" required/>

                                    </div>
                                </div>

                                <div class="col-sm-9">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Phone</label>

                                        <input name="Phone" type="text" class="form-control"  pattern = "[0-9]{10,16}" required>

                                    </div>
                                </div>

                                <div class="col-sm-9">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Email</label>

                                        <input name="Email" type="email" class="form-control" maxlength="100" required>

                                    </div>
                                </div>


                                <div class="col-sm-9">
                                    <div class="form-group label-floating">
                                        <label class="control-label">SSN</label>

                                        <input name="SSN" type="text" class="form-control" pattern = "[0-9]{12}" required>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-7 col-md-offset-2">
                                        <div class="title">
                                            <h4><br></h4>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-7 col-md-offset-1">
                                        <div class="title">
                                            <h4>Account info</h4>
                                        </div>

                                    </div>
                                </div>


                                <div class="col-sm-9">
                                    <div class="form-group label-floating">
                                        <label class="control-label">User Name</label>

                                        <input name="username" type="text" class="form-control" maxlength="64" required>

                                    </div>
                                </div>

                                <div class="col-sm-9">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Password</label>

                                        <input name="Password" type="password" class="form-control" maxlength="64" required/>

                                    </div>
                                </div>


                                <div class="col-md-5 col-md-offset-3">
                                    <input type="submit" class="btn btn-primary btn-lg"
                                           value="Sign Up" required/>
                                </div>


                            </div>

                            <div class="section landing-section">
                                <div class="col-md-3">
                                    <div class="title col-sm-offset-2 ">
                                        <h4>Personal image</h4>
                                    </div>

                                    <div class="col-sm-12 col-sm-offset-1">
                                        <br>
                                        <img  id="blah" src="/images/christian.jpg" alt="Raised Image"
                                             class="img-rounded img-responsive img-raised">




                                    </div>


                                        <br><br>
                                        <!--      <input class="col-md-9 col-md-offset-2 text-center btn btn-primary btn-round"

                                                    type='file'>
  -->
                                        <div class="col-md-9 col-md-offset-4 ">

                                            <label class=" btn btn-default btn-file btn-primary btn-round">
                                                Browse
                                                <input name="image" type="file" style="display: none; " id="imgInp" required>

                                                <i class="material-icons">photo</i>
                                            </label>

                                        </div>
                                </div>
                            </div>
                            <br><br>

                        </div>

                    </form>
                </div>
            </div>
        </form>


    </div>

    <footer class="footer">
        <div class="container">
